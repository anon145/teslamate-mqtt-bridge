# MQTT Connection Settings
MQTT_HOST=localhost            # The hostname of your MQTT broker
MQTT_PORT=1883                 # MQTT port (default: 1883, TLS: 8883)
MQTT_USER=user                 # Optional: Username for MQTT authentication
MQTT_PASS=password             # Optional: Password for MQTT authentication
MQTT_TOPIC_PREFIX=myteslamate/cars  # Prefix for all MQTT topics

# Tesla API Settings
TESLA_WSS_URI=wss://streaming.myteslamate.com/streaming/  # Tesla streaming API endpoint
TESLA_WSS_TLS_ACCEPT_INVALID_CERTS=false  # Set to true only for testing with self-signed certs
TESLA_WSS_USE_VIN=true         # Use VIN as identifier (recommended)

# Vehicle Identification
# Add one line per vehicle, starting with car number 1
VIN_CAR_1=YOUR_VEHICLE_VIN_HERE    # VIN for your first Tesla
VIN_CAR_2=YOUR_SECOND_VIN_HERE    # VIN for your second Tesla (optional)
# VIN_CAR_3=...                # Add more as needed

# Connection Parameters
RECONNECT_DELAY=5              # Base delay (seconds) before reconnection attempts
PING_INTERVAL=10               # WebSocket ping interval (seconds)
PING_TIMEOUT=30                # WebSocket ping timeout (seconds)

# Logging
# LOG_LEVEL=INFO               # Uncomment to change log level (DEBUG, INFO, WARNING, ERROR, CRITICAL) 